[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[alias]
	ci = commit -v
	co = checkout
	br = branch
	st = status
	mg = merge
	fh = fetch
	chp = cherry-pick
	sh = stash
	sm = submodule
	logs = log --stat --summary
	logt = log --abbrev-commit --decorate --graph --color --pretty='format:%C(yellow)%h %Creset%s %C(magenta)%an %C(green)%ar'
	diffs = diff --stat --summary
[push]
	# for only push to current branch
	default = tracking
[core]
	editor = vim
	excludesfile = ~/.gitignore
[mergetool]
	keepBackup = true
